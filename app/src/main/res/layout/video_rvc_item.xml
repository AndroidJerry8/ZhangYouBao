<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/video_bg"
    android:orientation="vertical"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/iv_item_bg"
            android:layout_width="@dimen/video_image_width"
            android:layout_height="@dimen/video_image_height"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@mipmap/global_bg_square_circular" />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_bg"
            android:layout_alignLeft="@+id/iv_item_bg"
            android:layout_alignRight="@+id/iv_item_bg"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/video_category_image_shadow"
            android:gravity="center_horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="暂无更新"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="最新"
        android:textSize="@dimen/text_14_sp" />
</LinearLayout>