<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:background="@color/whitesmoke"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:paddingRight="8dp"
        android:src="@drawable/invite_fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_touxiang"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:textColor="@color/skyblue"
        android:text="评论者"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_touxiang"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_time_comment"
        android:layout_alignEnd="@+id/tv_time_comment"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignBottom="@+id/imageView" />
    <TextView
        android:text="评论时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time_comment"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_touxiang"
        android:layout_toEndOf="@+id/iv_touxiang" />
    <TextView
        android:textColor="@color/black"
        android:text="评论的内容啦啦啦啦啦"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment"
        android:layout_below="@+id/tv_time_comment"
        android:layout_toRightOf="@+id/iv_touxiang"
        android:layout_toEndOf="@+id/iv_touxiang" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/night_news_detail_up_d"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
